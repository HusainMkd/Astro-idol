---
import cgpt from '../assets/cgpt.png';
import claude from '../assets/claude.png';
import pplx from '../assets/pplx.png';
import goog from '../assets/goog.png';
import { Image } from 'astro:assets';
---

<section class="text-center py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center">
      <h1 class="text-5xl font-bold mb-6">
        🔍 Search 4x with Omni AI 🚀
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Get results from multiple AI platforms in one click. 
        <br> Compare Google, ChatGPT, Perplexity, and Claude simultaneously.
      </p>
      <div class="flex gap-4 justify-center mb-12">
        <button class="btn-primary">
          Get Started FREE✨
        </button>
      </div>
        <div class="flex justify-center space-x-14">
            <Image src={goog} alt="UI Illustration" class="w-20 " />
            <Image src={cgpt} alt="UI Illustration" class="w-20 " />
            <Image src={claude} alt="UI Illustration" class="w-20 " />
            <Image src={pplx} alt="UI Illustration" class="w-20 " />
        </div>
    </div>
  </div>
</section>
